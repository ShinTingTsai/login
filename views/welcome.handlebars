<div class="container">
  <div class="card align-items-center" style="border: 0ch;">
    <div class="card-body">
      <h5 class="card-title">Account Information</h5>
      <form method="POST" action="/signout">
        <div class="form-group align-items-center input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">First Name</span>
          </div>
          <input disabled type="text" class="form-control" name="firstName" value="{{firstName}}">
        </div>

        <div class="form-group align-items-center input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">Email</span>
          </div>
          <input disabled type="text" class="form-control" name="email" value="{{email}}">
        </div>

        <button type="submit" class="btn btn-primary">Sign out</button>
      </form>
    </div>
  </div>
</div>